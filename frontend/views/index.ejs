<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

    <link rel="stylesheet" href="/styles/style.css" />
    <title>ToDoList</title>
  </head>
  <body>
    <header>
      <img src="/images/icons8-calendar-50.png" height="40" />
      <p>Today</p>
    </header>

    <div class="formSection">
      <div class="dataHeader">
        <h1><%=day%>, <%=month%> <%=date%></h1>
      </div>
      <div class="content">
        <% content.forEach(toDo => { %>

        <div class="item">
          <form class="list-field" action="/delete" method="post">
            <input
              type="checkbox"
              class="list"
              name="checkbox"
              value="<%=toDo._id%>"
              onChange="this.form.submit()"
            />
            <li><%= toDo.name %></li>
          </form>
        </div>
        <% }); %>

        <div class="newItem">
          <form action="/" method="post">
            <input
              class="form-field"
              type="text"
              name="newItem"
              minlength="3"
              maxlength="50"
              placeholder="New Item"
              autofocus
            />
            <button class="btn" value="add" type="submit">+</button>
          </form>
        </div>
      </div>
    </div>

    <footer>
      <p>Alice</p>
    </footer>
  </body>
</html>
